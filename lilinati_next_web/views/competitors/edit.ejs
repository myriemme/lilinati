<% include ../partials/header %>

    <div class="container">
        <div class="row">
            
            <div style="width:30%; margin: 25px auto">
                <form action="/competitions/<%= competition_id %>/competitors/<%= competitor._id %>?_method=PUT" method="post">
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Versenyző neve" name="competitor[competitorName]" value="<%= competitor.competitorName %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Versenyző videójának nézőképe" name="competitor[appearanceVideoImage]" value="<%= competitor.appearanceVideoImage %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Versenyző videójának linkje" name="competitor[appearanceVideoLink]" value="<%= competitor.appearanceVideoLink %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Versenyző szereplésének leírása" name="competitor[appearanceDescription]" value="<%= competitor.appearanceDescription %>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                <a href="/competitions">Go Back to competitions</a>
            </div>
        </div>
    </div>
    <% include ../partials/footer %>
