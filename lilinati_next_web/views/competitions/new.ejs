<% include ../partials/header %>

    <div class="container">
        <div class="row">
            <h1 style="text-align: center">Create a New Competition</h1>
            <div style="width:30%; margin: 25px auto">		
                <form action="/competitions" method="post">
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="A verseny neve" name="competitionName">
                    </div>
                      <div class="form-group">
                        <input class="form-control" type="text" placeholder="A verseny helyszínének képe" name="cityImage">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="A verseny leírása" name="competitionDescription">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="date" placeholder="A verseny dátuma" name="competitionDate">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" placeholder="A verseny értékelése" name="competitionValue">
                    </div>

                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                <a href="/competitions">Go Back</a>
            </div>
        </div>
    </div>
    <% include ../partials/footer %>
