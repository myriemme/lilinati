<% include ../partials/header %>

    <div class="container">
        <div class="row">
            <h1 style="text-align:center">Edit
                <%= competition.name %>
            </h1>
            <div style="width:30%; margin:25px auto;">

                <form action="/competitions/<%= competition.id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="competition[competitionName]" value="<%= competition.competitionName %>">
                    </div>

                    <div class="form-group">
                        <input class="form-control" type="text" name="competition[cityImage]" value="<%= competition.cityImage %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="competition[competitionDescription]" value="<%= competition.competitionDescription %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="date" name="competition[competitionDate]" value="<%= competition.competitionDate %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" name="competition[competitionValue]" value="<%= competition.competitionValue %>" min="1" step="1">
                    </div>

                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
                </form>
                <div class="goBack">
                    <a href="/competitions">Go back to view competitions</a>
                </div>
            </div>
        </div>
    </div>
    <% include ../partials/footer %>
